# Telegram bot token from @BotFather
BOT_TOKEN=your_telegram_bot_token

# At least one provider key is required
OPENROUTER_API_KEY=sk-or-...
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# MINIMAX_API_KEY=...
# XAI_API_KEY=xai-...

# Optional model defaults
# DEFAULT_PROVIDER=openrouter
# DEFAULT_MODEL=openrouter/auto

# Optional Telegram admin users for unlimited AI chat usage
# (non-admin users are limited to 5 AI messages/hour)
# TELEGRAM_USER_ID=123456789
# TELEGRAM_USER_IDS=[123456789,987654321]

# Optional Telegram chunk limit (1000-4096)
# MAX_TELEGRAM_MESSAGE_LENGTH=4000

# Link preview dependency toggles (optional)
# APIFY_API_TOKEN=apify_...
# YT_DLP_PATH=/usr/local/bin/yt-dlp
# FIRECRAWL_API_KEY=fc-...
# GROQ_API_KEY=gsk_...
# FAL_KEY=key_...
