# Telegram bot token from @BotFather
BOT_TOKEN=your_telegram_bot_token

# At least one provider key is required
OPENROUTER_API_KEY=sk-or-...
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# XAI_API_KEY=xai-...

# Optional model defaults
# DEFAULT_PROVIDER=openrouter
# DEFAULT_MODEL=openrouter/auto

# Optional Telegram admin users for /preview* and /features commands,
# and for unlimited summary usage (non-admin users are limited to 1 summary/hour)
# TELEGRAM_USER_ID=123456789
# TELEGRAM_USER_IDS=[123456789,987654321]

# Optional Telegram chunk limit (1000-4096)
# MAX_TELEGRAM_MESSAGE_LENGTH=4000

# Link preview dependency toggles (optional)
# APIFY_API_TOKEN=apify_...
# YT_DLP_PATH=/usr/local/bin/yt-dlp
# FIRECRAWL_API_KEY=fc-...
# GROQ_API_KEY=gsk_...
# FAL_KEY=key_...

# Link preview defaults (optional)
# LINK_PREVIEW_TIMEOUT_MS=120000
# LINK_PREVIEW_MAX_CHARACTERS=8000
# LINK_PREVIEW_CACHE_MODE=default              # default|bypass
# LINK_PREVIEW_YOUTUBE_TRANSCRIPT_MODE=auto    # auto|web|apify|yt-dlp|no-auto
# LINK_PREVIEW_MEDIA_TRANSCRIPT_MODE=auto      # auto|prefer
# LINK_PREVIEW_TRANSCRIPT_TIMESTAMPS=false
# LINK_PREVIEW_FIRECRAWL_MODE=auto             # off|auto|always
# LINK_PREVIEW_FORMAT=markdown                 # text|markdown
# LINK_PREVIEW_MARKDOWN_MODE=auto              # off|auto|llm|readability
# LINK_PREVIEW_DEBUG_PROGRESS=false
